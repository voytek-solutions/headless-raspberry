#!/bin/bash

BRANCH_NAME=$(git symbolic-ref --short HEAD)
COMMIT_TOPIC=$(head -n1 $1)

echo $BRANCH_NAME
if [[ -n "$BRANCH_NAME" ]] && [[ "$BRANCH_NAME" =~ ^[A-Z]{1,6}-[0-9]{1,6} ]]; then
        if [[ ! $COMMIT_TOPIC =~ \[[A-Z]+-[0-9]+ ]]; then
                sed -i -e "1s/^/[$BRANCH_NAME] /" $1
        fi;
fi
